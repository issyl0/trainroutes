<div id="results">
  <% if !@stopping_stations.empty? %>
    <p>You can travel via <%= Station.where(abbr: @selected_station).first.name %> to the following destinations:</p>
    <ul>
      <% @stopping_stations.uniq.each do |station| %>
        <li><%= station %></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no trains at the moment from <%= Station.where(abbr: @selected_station).first.name %>.
      Try again later, or <a href="/search">search again</a>.</p>
  <% end %>
</div>
